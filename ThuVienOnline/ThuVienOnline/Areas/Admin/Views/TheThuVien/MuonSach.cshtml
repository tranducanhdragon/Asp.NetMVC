@model PagedList.IPagedList<Model.EF.SachView>
@using PagedList.Mvc

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Mã Sách</th>
            <th>Tên sách</th>
            <th>Tác giả</th>
            <th>Nhà xuất bản</th>
            <th>Ảnh</th>
            <th>Mượn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSach</td>
                <td>@item.TenSach</td>
                <td>@item.HoTen</td>
                <td>@item.TenNXB</td>
                <td><img src="/Assets/Admin/pic/Sach/@item.AnhDaiDien" width="50" height="50" /></td>
                <td><a href="javascript:Muon(@item.MaSach, @ViewBag.IDThe)">Mượn</a></td>
            </tr>
        }
    </tbody>
</table>
